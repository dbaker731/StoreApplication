@model ModelLayer.ViewModels.CartListViewModel

@{
    ViewData["Title"] = "ViewPastOrders";
}

<h1>Past Orders</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Cart Id
            </th>
            <th>
                Store Location
            </th>
            <th>
                No. Items
            </th>
            <th>
                Total Price
            </th>
            <th>
                Order Time
            </th>
            <th>
                Actions
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var cart in Model.CurrentCarts)
        {
        <tr>
            <td>
                @cart.OrderId
            </td>
            <td>
                @cart.Store.StoreLocationName
            </td>
            <td>
                @cart.ProductsInOrder.Count()
            </td>
            <td>
                @cart.TotalPrice
            </td>
            <td>
                @cart.OrderTime
            </td>
            <td>
                <a asp-controller="Shop" asp-action="ViewPastOrder" asp-route-orderId="@cart.OrderId">View Order</a>
            </td>
        </tr>
        }
    </tbody>
</table>

<a asp-controller="Shop" asp-action="Index">Back to Shopping!</a>